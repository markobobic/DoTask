<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DoTask</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="display:none">
    @Html.Action("_DashBoard", "Home")
    <div id="contents">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

</body>
</html>
<script>
    $(document).ready(function () {
        $("body").show();
    });
</script>

<style>
    #contents {
        position: absolute;
        margin-left: 17%;
        background-color: white;
        height: 100%;
        width: 83%;
    }
    
    .bot-box-button {
        padding: 0.8em 1.2em;
        margin: 0 10px 0 0;
        width: auto;
        background: #673ab7;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 1em;
        color: #fff;
        line-height: 1em;
        letter-spacing: 0.6px;
        border-radius: 3px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1), 0 3px 6px rgba(0, 0, 0, 0.1);
        border: 0;
        outline: 0;
        transition: all 0.25s;
    }

    .bot-box-button-decline {
        padding: 0.8em 1.2em;
        margin: 0 10px 0 0;
        width: auto;
        background: #888;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 1em;
        color: #fff;
        line-height: 1em;
        letter-spacing: 0.6px;
        border-radius: 3px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1), 0 3px 6px rgba(0, 0, 0, 0.1);
        border: 0;
        outline: 0;
        transition: all 0.25s;
    }
    .btn-success {
        padding: 0.8em 1.2em;
        margin: 0 10px 0 0;
        width: auto;
        background: #673ab7;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 1em;
        color: #fff;
        line-height: 1em;
        letter-spacing: 0.6px;
        border-radius: 3px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1), 0 3px 6px rgba(0, 0, 0, 0.1);
        border: 0;
        outline: 0;
        transition: all 0.25s;
        background-color: #2E0077 !important;
    }
</style>

